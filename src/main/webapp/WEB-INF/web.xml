<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:web="http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee">
  <display-name>ParagonPlatform-temp System</display-name>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>classpath:config/log4j/log4j.xml</param-value>
  </context-param>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
    	classpath:config/context/spring/common-context.xml
    	classpath:config/context/bean/bean-application.xml
    	classpath:config/context/bean/bean-websocket.xml
    </param-value>
  </context-param>
  <listener>
    <listener-class>paragon.core.web.listener.ReloadLogConfigListener</listener-class>
  </listener>
  <listener>
    <listener-class>paragon.core.web.listener.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
  </listener>
  <listener>
    <listener-class>vertexid.paragon.comm.util.SessionListener</listener-class>
  </listener>
  <filter>
    <filter-name>ParagonServletFilter</filter-name>
    <filter-class>paragon.core.web.filter.ParagonServletFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ParagonServletFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>HttpAuthorityFilter</filter-name>
    <filter-class>vertexid.paragon.comm.filter.HttpAuthorityFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>HttpAuthorityFilter</filter-name>
    <url-pattern>/ctrl/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>HttpExceptionFilter</filter-name>
    <filter-class>vertexid.paragon.comm.filter.HttpExceptionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>HttpExceptionFilter</filter-name>
    <url-pattern>/ctrl/*</url-pattern>
  </filter-mapping>
  <context-param>
    <param-name>contextLoaderAdapter</param-name>
    <param-value>paragon.core.web.listener.adapter.ParagonContextLoaderAdapter</param-value>
  </context-param>
  <context-param>
    <param-name>systemConfigLocation</param-name>
    <param-value>classpath:config/app/app_info.xml</param-value>
  </context-param>
  <servlet>
    <servlet-name>appServlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>
			classpath:config/context/spring/servlet-context.xml
		</param-value>
    </init-param>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>appServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>